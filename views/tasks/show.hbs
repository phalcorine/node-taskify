<div class="row">
    <div class="col s12 m8">
        <h3>{{task.title}}
            <small>{{{ editIcon task.user user task._id false }}}</small>
        </h3>
        <div class="card task">
            <div class="card-content">
                <span class="card-title">Created On: {{ formatDate createdAt "MMMM Do YYYY hh:mm:ss a" }}</span>
                <span class="card-title">
                    Last Updated:
                    {{#if updatedAt}}
                    {{ formatDate createdAt "MMMM Do YYYY hh:mm:ss a" }}
                    {{else}}
                    {{ formatDate updatedAt "MMMM Do YYYY hh:mm:ss a" }}
                    {{/if}}
                </span>
                {{{task.description}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{task.user.displayName}}</span>
                <img src="{{task.user.imageUri}}" class="circle responsive-img img-small" alt="avatar">
            </div>
            <div class="card-action">
                <a href="/tasks/user/{{task.user._id}}">More from {{task.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>