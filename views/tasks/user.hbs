<h1>Tasks from {{user.firstName}}</h1>
<div class="row">
    {{#each tasks}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{ editIcon user ../user _id }}}
            </div>
            <div class="card-content center-aligh">
                <h5>{{ title }}</h5>
                <p>{{ stripTags (truncate description 150) }}</p> {{!-- Trim description --}}
                <br>
                <div class="chip">
                    <img src="{{user.imageUri}}" alt="image">
                    <a href="/tasks/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/tasks/{{_id}}">View full description...</a>
            </div>
        </div>
    </div>
    {{else}}
    No tasks available to display...
    {{/each}}
</div>