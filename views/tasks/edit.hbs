<h3>Edit Task: {{task.title}}</h3>
<div class="row">
    <form action="/tasks/{{task._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">

        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{task.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#htmlSelect task.status}}
                    <option value="private">Private</option>
                    <option value="public" selected>Public</option>
                    {{/htmlSelect}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Description of the Task</h5>
                <textarea name="description" id="description">{{task.description}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label>
                    <input type="checkbox" class="filled-in" name="complete" id="complete">
                    <span>Is Complete?</span>
                </label>
            </div>
        </div>

        <br />
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn ember">Cancel</a>
        </div>
    </form>
</div>